{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json",
    "indexes": {
      "notes": {
        "members": [
          "uid"
        ],
        "owner": [
          "uid"
        ]
      }
    }
  }
}
